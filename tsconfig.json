{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "components/*",
      ],
      "screens/*": [
        "screens/*",
      ],
      "assets/*": [
        "../assets/*",
      ],
      "data/*": [
        "data/*",
      ],
      "domain/*": [
        "domain/*",
      ],
      "lib/*": [
        "lib/*",
      ],
      "features/*": [
        "features/*",
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
